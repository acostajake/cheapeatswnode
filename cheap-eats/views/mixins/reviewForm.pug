mixin reviewForm(restaurant)
    form.reviewer(action=`/reviews/${restaurant._id}` method='POST')

        label(for='menuItem') Menu Item
        input(type='text' id='menuItem' name='menuItem' value=(restaurant.menuItem && restaurant.menuItem.name))

        textarea(name='text' placeholder=`What should people know about ${restaurant.name}?`)
        .reviewer__meta
            .reviewer__stars
                each num in [5,4,3,2,1]
                    input(type='radio' required id=`star${num}` name='rating' value=num)
                    label(for=`star${num}`) #{num} Stars
            input.button(type='submit' value='Add Review')